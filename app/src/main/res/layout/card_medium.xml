<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:elevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/card_medium_image"
        android:background="#DDDDDD">
    </ImageView>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="As Vantagens de ser Invisível"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livros"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="10dp"
                />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2.5dp">
                <View
                    android:background="@drawable/ic_store_24dp"
                    android:layout_height="15dp"
                    android:layout_width="15dp"
                    android:backgroundTint="#555555"
                    android:layout_marginRight="10dp"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:text="Perfeito"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2.5dp">
                <View
                    android:background="@drawable/ic_store_24dp"
                    android:layout_height="15dp"
                    android:layout_width="15dp"
                    android:backgroundTint="#555555"
                    android:layout_marginRight="10dp"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:text="Já li e não me serve mais"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2.5dp">
                <View
                    android:background="@drawable/ic_place_24dp"
                    android:layout_height="15dp"
                    android:layout_width="15dp"
                    android:backgroundTint="#555555"
                    android:layout_marginRight="10dp"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:text="Portal do Sol, Dobrada"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>