<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/category_item_button"
        android:background="@drawable/category_background_circle"
        android:elevation="@dimen/category_button_elevation"
        android:src="@drawable/ic_store_white_24dp"
        android:color="#fff"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:textSize="14dp"
        android:text="Livros"
        android:textColor="@color/colorCategoryTitle"
        android:gravity="center"
        android:id="@+id/category_item_title"/>

</LinearLayout>